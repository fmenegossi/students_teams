<div class="row roles-list">
<% User.all_other_users(current_user.id).each do |user| %>
  <%
    button_text = user.is_admin? ? 'Demote' : 'Promote'
    button_class = user.is_admin? ? 'btn-danger' : 'btn-success'
  %>
  <div class="col-xs-8"><%= user.email %> &nbsp; <button type="button" value="<%= user.id %>" class="btn-xs toggle-role btn <%= button_class %>"> <%= button_text %> </button></div>
<% end %>
</div>
